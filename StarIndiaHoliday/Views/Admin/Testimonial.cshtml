@model StarIndiaHoliday.Models.Testimonial
    @{
        ViewBag.Title = "Hotpackage";
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }

    <div id="wrap">
        <div class="clear" style="height:5px;"></div>
        @using (Html.BeginForm("Testimonial", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            <div id="wrap">
                <h1>Hot Package</h1>
                <span style="color:green;">@ViewBag.Success @TempData["msg"]</span>
                <span style="color:red;">@ViewBag.Error</span>
                <br>

                <div class="form-raw">
                    <div class="form-name">Persion Name</div>
                    <div class="form-txtfld">
                        @*<input type="text">
                            <span class="req-field">required field</span>*@
                        @Html.TextBoxFor(model => model.User_Name, new { @id = "Persion Name" })
                    </div>
                </div>
                <div class="clear"></div>
                <div class="form-raw">
                    <div class="form-name">Persion Post</div>
                    <div class="form-txtfld">
                        @Html.TextBoxFor(model => model.Post_Name, new { @id = "Persion Post" }) 
                    </div>
                </div>
                <div class="clear"></div>

                <div class="form-raw">
                    <div class="form-name">Short Description</div>
                    <div class="form-txtfld">
                        @Html.TextAreaFor(model => model.Description, new { @id = "Description" })
                        @*<textarea></textarea>*@
                    </div>
                </div>
                <div class="clear"></div> 
                <div> 
                </div>
                <div class="clear"></div>

                <div class="form-raw">
                    <div class="form-name">Package Image 1</div>
                    <div class="form-txtfld">
                        @*<input type="file">*@
                        <input type="hidden" id="photo1" name="photo1" value="@ViewBag.photo1" />
                        @if (ViewBag.btn == "Update")
                       {
                            <input type="file" multiple="multiple" name="files[0]" id="files_1" accept=".jpg,.jpeg,.gif,.png" />@ViewBag.photo1


                        }
                        else
                        {

                            @Html.TextBoxFor(Model => Model.file1, new { type = "file", id = "file1", accept = ".jpg,.jpeg,.gif,.png" })

                        }

                        <div class="clear"></div>
                        <strong style="margin: 5px 0px">Image Size ( width: 533px, height: 450px )</strong>
                    </div>
                </div>
                <div class="clear"></div>

                <div class="clear"></div>
                <div class="form-raw">
                    <div class="form-name">Status</div>
                    <div class="form-txtfld">
                        @*<input type="checkbox">*@
                        @Html.CheckBoxFor(model => model.Status, new { @checked = "checked" })
                        (Active/Inactive)
                        @*Status(Active/Inactive)*@
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="form-raw">
                    <div class="form-name">&nbsp;</div>
                    <div class="form-txtfld">
                        @*<input type="button" class="btn" value="Submit">*@
                        @if (ViewBag.btn == "Update")
                        {
                            <input type="submit" value="Update" class="btn" name="cmd" onclick="return validate();">
                        }
                        else
                        {
                            <input type="submit" value="Submit" class="btn" name="cmd" onclick="return validate();" />
                        }
                    </div>
                </div>
            </div>
        }
        <div class="clear">&nbsp;</div>
    </div>
    <div id="wrap3">
        @{Html.RenderAction("_PartialTestimonial");}
        <div class="clear">&nbsp;</div>
    </div>
    <div class="clear"></div>