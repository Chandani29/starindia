@model StarIndiaHoliday.Models.ChangePassword
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="wrap">
    <section class="bodymain" style="min-height:580px;">
        <aside class="middle-container-fluid">
            <div class="admin-inr">
                <br>
<span style="color:green;">@ViewBag.Success @TempData["msg"]</span>
<span style="color:red;">@ViewBag.Error</span>
@using (Html.BeginForm())
{ 
    @Html.ValidationSummary(true)


                <div class="form-outer" style="margin-left:320px; width:500px;">
                    <h1>Change Password</h1>
                    <div class="contact-row">
                        <div class="name">Current Password</div>
                        <div class="txtfld-box">
                            @*<input type="text">*@
                            @Html.PasswordFor(model => model.Password)
                        </div>
                        @*<div class="req-field"> This Field Required </div>*@
                    </div>
                    <div class="clear"></div>
                    <div class="contact-row">
                        <div class="name">New Password</div>
                        <div class="txtfld-box">
                            @*<input type="text">*@
                            @Html.PasswordFor(model => model.NewPassword)
                        </div>
                    </div>
                    <div class="clear"></div>
                    <div class="contact-row">
                        <div class="name">Confirm Password</div>
                        <div class="txtfld-box">
                            @*<input type="password">*@
                            @Html.PasswordFor(model => model.ConfirmPassword)
                        </div>
                    </div>
                    <div class="clear">&nbsp;</div>
                    <div class="contact-row">
                        <div class="name" style="float:right; width:1px;">&nbsp;</div>
                        <div style="background:none; border:none; float:left;">
                            <input type="submit" class="btn" value="Change Password">
                            <br>
                        </div>
                    </div>
                </div>
}
                <div class="clear">&nbsp;</div>

                <div class="clear"></div>
            </div>
        </aside>
        <div class="clear"></div>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    </section>
</div>
<div class="clear"></div>

